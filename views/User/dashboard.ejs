<h1 class="m-4 titleAlign">Welcome <%= result[0].name %>! </h1>

<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <div class="card  colorBorderBottom">
        <img class="img-fluid cardImg" src="Images/StaffRetreat.jpg" alt="...">
    
        <div class="card-body text-center">
          
    
          <% if (alreadyRegistered == 1) { %>
            <h5 class="card-title">Thank you for Registering!</h5>
          <p class="card-text">February 19th - 21st</p>
          <div class="text-center">
            <a href="/eventRegister" class="btn btn-primary btn-lg">Register!</a>
          </div>
          <div class="text-center">
            <button type="button" class="btn btn-secondary btn-lg" disabled> Already Registered</button>
          </div>
          <% } else { %>
            <h5 class="card-title">Register for Staff Retreat Here!</h5>
          <p class="card-text">February 19th - 21st</p>
          <div class="text-center">
            <a href="/eventRegister" class="btn btn-primary btn-lg">Register!</a>
          </div>
          <% } %>
    
    
    
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card colorBorderBottom2 text-center">
        <img class="img-fluid cardImg" src="Images/Element.jpg" alt="...">
    
        <div class="card-body">
          <h5 class="card-title">Register for Element Retreat Here!</h5>
          <p class="card-text">May 19th - 21st</p>
          <div class="text-center">
            <button type="button" class="btn btn-secondary btn-lg" disabled> Coming Soon!</button>
          </div>
        </div>
      </div>
    </div>
 
  </div>
</div>

